---

<Layout title="Recursos y Herramientas">
	<div class="space-y-12 py-8">
		<h1 class="text-3xl font-medium text-slate-800 dark:text-white">Recursos y Herramientas</h1>
		
		{recursos.map(categoria => (
			<section class="space-y-4">
				<h2 class="text-xl font-medium text-slate-800 dark:text-white">{categoria.categoria}</h2>
				<div class="grid md:grid-cols-2 gap-4">
					{categoria.herramientas.map(herramienta => (
						<a href={herramienta.link} 
						   target="_blank" 
						   rel="noopener noreferrer" 
						   class="group block p-6 bg-white dark:bg-slate-800 rounded-xl border border-slate-100 dark:border-slate-700 hover:border-slate-200 dark:hover:border-slate-600 hover:shadow-sm">
							<h3 class="text-lg font-medium text-slate-800 dark:text-white mb-2 group-hover:text-slate-600 dark:group-hover:text-slate-300">
								{herramienta.nombre}
							</h3>
							<p class="text-slate-600 dark:text-slate-300">{herramienta.descripcion}</p>
						</a>
					))}
				</div>
			</section>
		))}
	</div>
</Layout>